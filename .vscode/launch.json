    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Next.js: Server-side",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "--inspect-brk",
                "./node_modules/next/dist/bin/next"
            ],
            "args": [
                "dev"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "sourceMaps": true,
            "preLaunchTask": "npm: dev"
        }
    ]
}